# Database Configuration
# DATABASE_TYPE can be either "postgresql" or "sqlite"
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
POSTGRES_USER=xenix
POSTGRES_PASSWORD=xenix_password
POSTGRES_DB=xenix_db
POSTGRES_PORT=5435
DATABASE_URL=postgresql://xenix:xenix_password@localhost:5435/xenix_db

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
# DATABASE_URL=sqlite://./xenix.db

# Python Configuration
PYTHON_EXECUTABLE=python3
